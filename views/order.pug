include header

.wrap
  .content
    header.site-header
      include site_header_order

    .container
      .row
        div(class='col col-md-12')
          h3.cart-header Cart
          #cart-nav
        div(class='col col-md-12')
          h3 Create order
        div(class='col col-md-6')
          form#lite-shop-order(action="")
            .form-group
              label(for="username") Name
              input(
                type="text"
                id="username"
                class="form-control"
                placeholder="Enter your name"
              )
            .form-group
              label(for="phone") Phone
              input(
                type="text"
                id="phone"
                class="form-control"
                placeholder="+38 (050)-555-55-55"
              )
            .form-group
              label(for="email") Email
              input(
                type="email"
                id="email"
                class="form-control"
                placeholder="main@example.com"
              )
            .form-group
              label(for="address") Address
              input(
                type="text"
                id="address"
                class="form-control"
                placeholder="Whera are you"
              )
            .form-group
              label(for="rule")
                input(
                  type="checkbox"
                  id="rule"
                  value="1"
                )
                span.ml-2 Terms and Conditions
            .form-group
              button(
                class="btn btn-success"
                type="submit"
              ) Finish order

include footer
script(src="js/order.js")
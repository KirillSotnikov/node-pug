div(class='col col-md-4')
  div(class='card')
    div
      a(
        href='goods?id='+val.id 
        class='card-title text-center h3 ml-2'
      ) #{val.name}
      img(
        src='images/' + val.image
      )
      p(class='text-center') #{val.cost.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} uah
      ul(class='card-actions')
        li
          button(
            data-goods_id = val.id
            class='button button-primary add-to-cart'
          ) To cart